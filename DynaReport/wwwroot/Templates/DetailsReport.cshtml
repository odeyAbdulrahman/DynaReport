@model DynaReport.ViewModels.DetailsReportViewModel
@{
    Layout = null;
    bool isArabic = Model?.Lang == "ar";
    var dir = isArabic ? "rtl" : "ltr";
    var lang = isArabic ? "ar" : "en";
}

<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Model?.ReportTitle ?? (isArabic ? "تقرير التفاصيل" : "Details Report"))</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: @(isArabic ? "'Cairo'" : "'Roboto'"), sans-serif;
            line-height: 1.6;
            direction: @dir;
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            background: #fff;
            padding: 30px;
        }

        .header {
            background: #1a3c73;
            color: #fff;
            padding: 25px;
            text-align: center;
            border-radius: 8px 8px 0 0;
            border-bottom: 3px solid #1e40af;
        }

        .header h1 {
            font-size: 28px;
            font-weight: 700;
            margin: 0;
            letter-spacing: @(isArabic ? "0" : "0.5px");
        }

        .detail-section {
            padding-top: 20px;
        }

        .detail-row {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding: 12px;
            background: #f9fafb;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
        }

        .detail-label {
            width: 250px;
            font-weight: 600;
            color: #1a3c73;
            padding: @(isArabic ? "0 0 0 10px" : "0 10px 0 0");
            text-align: @(isArabic ? "right" : "left");
        }

        .detail-value {
            flex: 1;
            color: #4b5563;
            font-size: 15px;
            text-align: @(isArabic ? "right" : "left");
        }

        .no-data {
            text-align: center;
            padding: 30px;
            color: #6b7280;
            font-size: 16px;
            background: #f9fafb;
            border-radius: 8px;
            margin: 20px 0;
        }

        .footer {
            margin-top: 25px;
            padding: 15px;
            text-align: @(isArabic ? "left" : "right");
            font-size: 13px;
            color: #6b7280;
            border-top: 1px solid #e5e7eb;
        }

            .footer p {
                margin: 5px 0;
            }

            .footer .official-notice {
                font-weight: 600;
                color: #1a3c73;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@(Model?.ReportTitle ?? (isArabic ? "تقرير التفاصيل" : "Details Report"))</h1>
        </div>

        <div class="detail-section">
            @if (Model?.Details != null && Model.Details.Any())
            {
                foreach (var detail in Model.Details)
                {
                    <div class="detail-row">
                        <div class="detail-label">@detail.Key</div>
                        <div class="detail-value">@(detail.Value?.ToString() ?? (isArabic ? "غير متاح" : "N/A"))</div>
                    </div>
                }
            }
            else
            {
                <div class="no-data">
                    <p>@(isArabic ? "لا توجد تفاصيل متاحة" : "No details available")</p>
                </div>
            }
        </div>

        <div class="footer">
            <p class="official-notice">@(isArabic ? "هذا المستند رسمي ويعتبر لاغيًا عند التغيير عليه." : "This document is official and considered void upon modification.")</p>
        </div>
    </div>
</body>
</html>